<h1>Listing user_pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Pokemon</th>
      <th>User</th>
      <th>Exp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_pokemons.each do |user_pokemon| %>
      <tr>
        <td><%= user_pokemon.pokemon %></td>
        <td><%= user_pokemon.user %></td>
        <td><%= user_pokemon.exp %></td>
        <td><%= link_to 'Show', user_pokemon %></td>
        <td><%= link_to 'Edit', edit_user_pokemon_path(user_pokemon) %></td>
        <td><%= link_to 'Destroy', user_pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

